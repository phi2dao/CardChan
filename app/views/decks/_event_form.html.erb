<%= form_for [@deck, @event] do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <%= f.label :card %>
  <%= f.text_field :card %>
  <%= f.label :quantity %>
  <%= f.text_field :quantity %>
  <%= f.label :action %>
  <%= f.select :action, [['Play', 'play'], ['Discard', 'discard'], ['Flip', 'flip'], ['Draw', 'draw'], ['Shuffle', 'shuffle']] %>
  <%= f.label :note %>
  <%= f.text_field :note, placeholder: "Leave a note..." %>
  <%= f.submit "Go", class: "btn btn-large btn-primary" %>
<% end %>
