<%= form_for [@deck, @event] do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <%= f.label :action %>
  <%= f.select :action, [['Flip', 'flip'], ['Draw', 'draw'], ['Play', 'play'], ['Discard', 'discard'], ['Discard at Random', 'random'], ['Shuffle', 'shuffle'], ['Shuffle All', 'shuffle_all']] %>
  <%= f.label :input %>
  <%= f.text_field :input, placeholder: "Numbers for flip/draw, cards for play/discard" %>
  <%= f.label :email %>
  <%= f.text_field :email, placeholder: "Same email as the deck" %>
  <%= f.submit "Go", class: "btn btn-large btn-primary" %>
<% end %>
